<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="biblioteca.libro_list">
            <field name="name">libro list</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <list>
                    <field name="title"/>
                    <field name="isbn"/>
                    <field name="publishingDate"/>
                    <field name="autor_id"/>
                    <field name="prestamos"/>
                </list>
            </field>
        </record>
        
        <record model="ir.ui.view" id="biblioteca.libro_form">
            <field name="name">libro form</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="title"/>
                            <field name="isbn"/>
                            <field name="publishingDate"/>
                            <field name="autor_id"/>
                            <field name="prestamos"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="biblioteca.libro_search">
            <field name="name">libro form</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <search string="Libros">
                    <field name="title" string="Title and ISBN"
                    filter_domain="['|', ('title', 'ilike', self), ('isbn', 'ilike', self)]"/>
                </search>
            </field>
        </record>
        
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="biblioteca.libro_action_window">
            <field name="name">libro window</field>
            <field name="res_model">biblioteca.libro</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
