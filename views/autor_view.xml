<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="biblioteca.autor_list">
            <field name="name">autor list</field>
            <field name="model">biblioteca.autor</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="nationality"/>
                    <field name="birthDate"/>
                    <field name="libros"/>
                </list>
            </field>
        </record>
        
        <record model="ir.ui.view" id="biblioteca.autor_form">
            <field name="name">autor form</field>
            <field name="model">biblioteca.autor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="nationality"/>
                            <field name="birthDate"/>
                            <field name="libros"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="biblioteca.autor_action_window">
            <field name="name">autor window</field>
            <field name="res_model">biblioteca.autor</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
